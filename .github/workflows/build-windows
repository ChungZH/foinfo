name: Build on Windows (MSVC)

on:
  push:
    branches: [ main ]
  pull_request:
    branches: [ main ]

jobs:
  build:

    runs-on: windows-latest

    steps:
    - uses: actions/checkout@v2
    - name: build
      run: |
        mkdir build
        cd build
        cmake ..
        make
    - name: make check
      run: make check
    - name: make distcheck
      run: make distcheck
